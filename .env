# Login Throttler (Brute-force prevention)
# After 5 attempts in 15 mins, start adding delays
LOGIN_THROTTLE_WINDOW_MIN=15
LOGIN_THROTTLE_DELAY_AFTER=5
LOGIN_THROTTLE_DELAY_MS=500

# Whitelist IPs that can bypass rate limits (comma-separated, no spaces)
